{
  "version": 2,
  "buildCommand": "npm install --no-package-lock && npm run build",
  "installCommand": "npm install --no-package-lock",
  "framework": "nextjs",
  "regions": ["fra1"],
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_BASE_PATH": "/emr",
    "NODE_OPTIONS": "--max_old_space_size=4096"
  },
  "headers": [
    {
      "source": "/emr/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/emr/:path*",
      "destination": "/:path*"
    }
  ]
}
